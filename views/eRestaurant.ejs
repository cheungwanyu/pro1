<html>
	<head>
		<link rel="stylesheet" type="text/css" href="home.css">
	</head>
	<body>
		<div class="navigation">
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="/createRestaurant">Create Restaurant </a></li>
				<li><a href="/search">Search</a></li>
				<li style="float:right"><a href="/logout">Logout</a></li>
			</ul>
		</div>
		<div class="centent">
			<h1>Edit Restaurant</h1>
			<form action="/editRest" method="POST" enctype="multipart/form-data">
			    <input type="hidden" name="restaurant_id" value="<%= result.restaurant_id%>" required>
				<table>
					<tr>
						<td>Name</td>
						<td><input type="text" name="name" value="<%= result.name%>" required></td>
					</tr>
					<tr>
						<td>Borough</td>
						<td><input type="text" name="borough" value="<%= result.borough%>"></td>
					</tr>
					<tr>
						<td>Cuisine</td>
						<td><input type="text" name="cuisine" value="<%= result.cuisine%>"></td>
					</tr>
					<tr>
						<td colspan="2" align="center" >Address</td>
					</tr>
					<tr>
						<td>Street</td>
						<td><input type="text" name="street" value="<%= result.address.street %>"></td>
					</tr>
					<tr>
						<td>Building</td>
						<td><input type="text" name="building" value="<%= result.address.building %>"></td>
					</tr>
					<tr>
						<td>Zipcode</td>
						<td><input type="text" name="zipcode" value="<%= result.address.zipcode %>"></td>
					</tr>
					<tr>
						<td>Coord</td>
						<td><input type="text" name="coord" value="<%= result.address.coord %>"></td>
					</tr>
					<tr>
						<td>Photo</td>
						<td><input type="file" name="photo" ></td>
					</tr>
					<tr>
						<td rowspan="2"><input type="submit"></td>
					</tr>
				</table>
			</form>
		</div>
	</body>
</html>